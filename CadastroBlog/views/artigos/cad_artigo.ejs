<%- include ("../partials/header.ejs") %>
    <%- include ("../partials/navbar.ejs") %>
        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h2>Novo artigo</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="salvaartigo">
                        <input class="form-control" type="text" name="titulo"
                            placeholder="Defina o tÃ­tulo do artigo"><br>
                        <textarea class="form-control" placeholder="Escreva o artigo aqui!" name="body"
                            id="artigo"></textarea><br>
                        <label>Categoria</label>
                        <select name="categoria" class="form-control">
                            <option value="">Selecione Categoria</option>
                            <% categoria.forEach((categs)=> { %>
                                <option value="<%= categs.id_categoria %>">
                                    <%= categs.titulo %>
                                </option>
                                <% }) %>
                        </select>
                        <br>
                        <br>
                        <button class="btn btn-success">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
        <%- include ("../partials/footer.ejs") %>
        <%- include ("../partials/footer.ejs") %>
        <script src="/tinymce/tinymce.min.js"></script>
        <script>
            tinymce.init({
                language: 'pt_BR',
                selector: "#artigo",
                plugins: [
                    'advlist autolink link image lists print preview hr searchreplace'
                    + ' wordcount fullscreen insertdatetime media save table paste emoticons'
                ]
            }) 
        </script>