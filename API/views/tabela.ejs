<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabela</title>
    <link rel="stylesheet" href="tabela.css">
</head>

<body>
    <div class="container">
        <table border="1px">
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Data Nascimento</th>
                <th></th>
                <th></th>
            </tr>
            <% client.forEach((clientes)=>{ %>
                <tr>
                    <td>
                        <%= clientes.nome %>
                    </td>
                    <td>
                        <%= clientes.email %>
                    </td>
                    <td>
                        <%= clientes.senha %>
                    </td>
                    
                    <td>
                        <%= clientes.datanascimento %>
                    </td>
                    <th><a class="edita" href="editar/<%= clientes.id %>">Editar</a></th>
                    <form action="/deletar" method="post">
                        <th><button><a class="deleta">Deletar</a></button></th>
                        <input type="hidden" name="id" value="<%= clientes.id %>">
                    </form>
                    <% }); %>
                </tr>
        </table>
    </div>
    <a href="/"><button>Voltar</button></a>
</body>

</html>