<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update</title>
    <link rel="stylesheet" href="/editar.css">
</head>

<body>
    <div class="container">
        <div class="title">
            <label for="title">Atualizar informações</label>
        </div>
        <div class="line"></div>
        <form action="/update" method="post">
            <input type="text" name="id" id="id" value="<%= cliente.id %>" hidden>
            <input type="text" name="nome" id="nome" placeholder="Nome" value="<%= cliente.nome %>">
            <input type="text" name="email" id="email" placeholder="Email" value="<%= cliente.email %>">
            <input type="text" name="senha" id="senha" placeholder="Senha" value="<%= cliente.senha %>">

            <div class="datanascimento">
                
                <select name="dia">
                    <script>
                        for (var d = 1; d <= 31; d++) {
                            document.write("<option>" + d + "</option>")
                        }
                    </script>
                </select>
                <select name="mes">
                    <option value="1">Janeiro</option>
                    <option value="2">Fevereiro</option>
                    <option value="3">Março</option>
                    <option value="4">Abril</option>
                    <option value="5">Maio</option>
                    <option value="6">Junho</option>
                    <option value="7">Julho</option>
                    <option value="8">Agosto</option>
                    <option value="9">Setembro</option>
                    <option value="10">Outubro</option>
                    <option value="11">Novembro</option>
                    <option value="12">Dezembro</option>
                </select>
                <select name="dia">
                    <script>
                        for (var a = 2024; a >= 1900; a--) {
                            document.write("<option>" + a + "</option>")
                        }
                    </script>
                </select>
            </div>

            <button>Atualizar</button>
        </form>
        <div class="line"></div>
        <a href="/tabela">Voltar</a>
    </div>
</body>

